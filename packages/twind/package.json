{
  "name": "@agile-ui/twind",
  "version": "1.0.0",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "type": "module",
  "scripts": {
    "dts": "tsc src/index.ts --declaration --emitDeclarationOnly --skipLibCheck --target esnext --moduleResolution node --outDir dist",
    "build": "vite build && npm run dts"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huijiewei/agile-ui.git",
    "directory": "packages/twind"
  },
  "peerDependencies": {
    "twind": ">=1",
    "@twind/preset-autoprefix": ">=1",
    "@twind/preset-tailwind": ">=1",
    "@twind/preset-ext": ">=1"
  },
  "dependencies": {
    "@agile-ui/utils": "*"
  },
  "devDependencies": {
    "twind": "next",
    "@twind/preset-autoprefix": "next",
    "@twind/preset-tailwind": "next",
    "@twind/preset-ext": "next"
  }
}
