{
  "name": "@agile-ui/react",
  "version": "1.0.0",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "author": "Huijie Wei",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --inject react-shim.js --target esnext --treeshake --dts --minify --clean",
    "prepublishOnly": "npm run build"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huijiewei/agile-ui.git",
    "directory": "packages/react"
  },
  "peerDependencies": {
    "@agile-ui/twind": "*",
    "react": ">=18",
    "react-dom": ">=18",
    "twind": "next"
  },
  "dependencies": {
    "@agile-ui/react-hooks": "*",
    "@agile-ui/utils": "*",
    "@floating-ui/react-dom-interactions": "^0.8.1"
  },
  "devDependencies": {
    "@agile-ui/test-utils": "*",
    "@agile-ui/twind": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "twind": "next"
  }
}
