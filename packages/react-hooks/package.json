{
  "name": "@agile-ui/react-hooks",
  "version": "1.0.0",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "dts": "tsc src/index.ts --declaration --emitDeclarationOnly --skipLibCheck --target esnext --moduleResolution node --outDir dist",
    "build": "vite build && npm run dts"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huijiewei/agile-ui.git",
    "directory": "packages/react-hooks"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@agile-ui/utils": "*"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "@agile-ui/test-utils": "*"
  }
}
