{
  "name": "@agile-ui/monorepo",
  "private": true,
  "author": "Huijie Wei <huijeiwei@outlook.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "prod": "npm run prod --workspaces --if-present",
    "dev": "npm run dev -w @agile-ui/website",
    "test": "vitest",
    "build": "npm run build -w @agile-ui/website",
    "preview": "npm run preview -w @agile-ui/website"
  },
  "devDependencies": {
    "@types/node": "^18.0.1",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vitest": "^0.17.0"
  },
  "workspaces": [
    "packages/*",
    "tooling/*",
    "website"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/huijiewei/agile-ui.git"
  },
  "bugs": {
    "url": "https://github.com/huijiewei/agile-ui/issues"
  },
  "homepage": "https://github.com/huijiewei/agile-ui#readme",
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css}": "prettier --write"
  }
}
